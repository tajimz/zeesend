<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tab.PeopleFragment"
    android:padding="10dp"
    >


    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People"
            android:textSize="25dp"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/imgSrc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_search"
            android:layout_alignParentEnd="true"


            />
    </RelativeLayout>


    <SearchView
        android:id="@+id/srcView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:queryHint="Enter Username to search"
        android:background="@drawable/search_view_bg"
        android:visibility="visible"

        />








    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPeople"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvKnow"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tvKnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People You May Know: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srcView"
        />





</androidx.constraintlayout.widget.ConstraintLayout>